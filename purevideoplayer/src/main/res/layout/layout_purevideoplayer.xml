<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_default"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <!--加载动画-->
    <LinearLayout
        android:id="@+id/llLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible">
        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="27dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/loading"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/loading..."/>
    </LinearLayout>

    <!--改变播放位置-->
    <LinearLayout
        android:id="@+id/llChangePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        android:background="@drawable/bg_radus_shape">

        <TextView
            android:id="@+id/tvSeekToPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:text="00:00"/>
        <ProgressBar
            android:id="@+id/pbSeekTo"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:progressDrawable="@drawable/pb_layer"
            android:max="100"
            android:maxHeight="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
    </LinearLayout>

    <!--改变亮度-->
    <LinearLayout
        android:id="@+id/llChangeBright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        android:background="@drawable/bg_radus_shape">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_palyer_brightness"/>
        <ProgressBar
            android:id="@+id/pbBright"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:progressDrawable="@drawable/pb_layer"
            android:progress="10"
            android:max="100"
            android:maxHeight="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
    </LinearLayout>

    <!--改变声音-->
    <LinearLayout
        android:id="@+id/llChangeVolumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        android:background="@drawable/bg_radus_shape">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_palyer_volume"/>
        <ProgressBar
            android:id="@+id/pbVolumn"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:progressDrawable="@drawable/pb_layer"
            android:progress="40"
            android:max="100"
            android:maxHeight="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
    </LinearLayout>

    <!--播放完成-->
    <LinearLayout
        android:id="@+id/llPlayFinish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6c0b0b0b"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_player_replay"
            android:text="重新播放"
            android:drawablePadding="8dp"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </LinearLayout>

    <!--播放错误-->
    <LinearLayout
        android:id="@+id/llPlayError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放错误，请重试"
            android:drawablePadding="8dp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="重新播放"
            android:background="@drawable/bg_retry"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </LinearLayout>

    <!--顶部标题-->
    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/player_mask_top"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:visibility="visible">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="播放错误，请重试"
            android:drawableLeft="@drawable/ic_player_back"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!--底部控制栏-->
    <LinearLayout
        android:id="@+id/llBottomCtrl"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/player_mask_bottom"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/ivPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_player_start"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tvCurTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:text="00:00"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:text="/"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:text="00:00"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/sbPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/seekbar_seletor"
            android:background="@null"
            android:thumb="@drawable/my_seekbar_thumb"/>
        <ImageView
            android:id="@+id/ivFullScreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_player_enlarge"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
</RelativeLayout>