<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:paddingBottom="0dp"
    android:layout_marginBottom="0dp">

    <android.support.design.widget.TabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        android:background="@color/backgroundColor">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_below="@id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/backgroundColor">
        <com.example.kaizhiwei.puremusictest.Audio.AudioListView
            android:id="@+id/lvAllSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay"
            android:background="@drawable/default_back"/>

        <com.example.kaizhiwei.puremusictest.Audio.AudioListView
            android:id="@+id/lvSongFolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay"
            android:background="@drawable/default_back"/>

        <com.example.kaizhiwei.puremusictest.Audio.AudioListView
            android:id="@+id/lvArtist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay"
            android:background="@drawable/default_back"/>

        <com.example.kaizhiwei.puremusictest.Audio.AudioListView
            android:id="@+id/lvAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay"
            android:background="@drawable/default_back"/>
    </android.support.v4.view.ViewPager>

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor">
        <com.example.kaizhiwei.puremusictest.Audio.NowPlayingLayout
            android:id="@+id/nowPlayingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</RelativeLayout>
