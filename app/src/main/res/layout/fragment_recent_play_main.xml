<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true">
    <com.example.kaizhiwei.puremusictest.CommonUI.CommonTitleView
        android:id="@+id/commonTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:rightText="">
    </com.example.kaizhiwei.puremusictest.CommonUI.CommonTitleView>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayoutRecentPlay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabTextColor="@color/black"
        app:tabSelectedTextColor="@color/tabSelectTextColor"
        app:tabBackground="@android:color/transparent"
        app:tabIndicatorColor="@color/tabSeperatorLineColor"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed">
    </android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listviewSeperatorLineColor"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpRecentPlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollFooter="@android:color/transparent"
        android:overScrollHeader="@android:color/transparent"
        android:overScrollMode="never">
    </android.support.v4.view.ViewPager>
</LinearLayout>