<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/listview_padding"
        android:paddingRight="@dimen/listview_padding"
        android:background="@drawable/default_selector">
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:id="@+id/ivSongImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mymusic_like"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_marginRight="5dp">
                <TextView android:id="@+id/tvFavoriteMain"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="123456789"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"/>
                <TextView android:id="@+id/tvFavoriteSub"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="123456789"
                    android:layout_gravity="center_vertical"
                    android:gravity="top"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ibBtnMore"
                android:layout_gravity="center_vertical"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_songlist_detail_nor"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
