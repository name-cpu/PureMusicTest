<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="歌曲信息"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/defaultTextColor"
        android:textSize="@dimen/large_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲:"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
        <TextView
            android:id="@+id/tvMediaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DefaultMainTextView"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手:"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
        <TextView
            android:id="@+id/tvArtist"
            style="@style/DefaultMainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cbDeleteFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑:"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
        <TextView
            android:id="@+id/tvAlbum"
            style="@style/DefaultMainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listviewSeperatorLineColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件路径:"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
        <TextView
            android:id="@+id/tvFilePath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件格式:"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
        <TextView
            android:id="@+id/tvFileFormat"
            style="@style/DefaultMainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件大小:"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
        <TextView
            android:id="@+id/tvFileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subTextColor"
            android:textSize="@dimen/mini_text_size"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btnOK"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="关闭"
            android:gravity="center"
            android:background="@drawable/default_back"
            android:clickable="true"
            style="@style/DefaultTextView"
            android:textColor="@color/tabSelectTextColor"/>
    </RelativeLayout>
</LinearLayout>